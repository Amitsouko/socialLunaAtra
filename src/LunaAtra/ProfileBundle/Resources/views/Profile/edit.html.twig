{% extends "CoreBundle::base.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block content %}

{% set user = app.user %}
{% include "ProfileBundle:Include:header-profile.html.twig" %}


<div class="fos_user_user_show">



{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit normal-form">

    <div class="row">
        <div class="col-md-12">
            <div class="white-box text-center">
                <ul class="list-inline">
                    <li><a href="{{ path("fos_user_profile_edit") }}">Profile</a></li>
                    <li>Guild</li>
                    <li>Presonnages</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="white-box text-center">
                <a class="red-button" href="{{ path("fos_user_profile_show") }}">Cancel</a>
                <input type="submit" value="{{ 'profile.edit.submit'|trans }}" />
            </div>
        </div>
    </div>


    <div class="row">

        <div class="col-md-7">
            <div class="white-box height310" >
                <h2><span>Général</span></h2>

         
                    {{ form_label(form.username,null, { "label_attr": {"class":"col-no-padding col-xs-12 col-sm-5"}}) }}
                    {{ form_widget(form.username, { "attr": {"class":"col-no-padding col-xs-12 col-sm-7"}}) }}
                    {{ form_label(form.email,null, { "label_attr": {"class":"col-no-padding col-xs-12 col-sm-5"}}) }}
                    {{ form_widget(form.email, { "attr": {"class":"col-no-padding col-xs-12 col-sm-7"}}) }}
                    {{ form_label(form.announce,null, { "label_attr": {"class":"col-no-padding col-xs-12 col-sm-5"}}) }}
                    {{ form_widget(form.announce, { "attr": {"class":"col-no-padding col-xs-12 col-sm-7"}}) }}
            <div class="clearfix"></div>
           
            </div>
        </div>


        <div class="col-md-5">
            <div class="white-box height310" >
                <h2><span>Image de profil</span></h2>
                 <img class="margin-auto" src="{{ user.WebPath | imagine_filter('profile_thumbnail') }}"><br/>
                    {{ form_widget(form.file, {attr:{class:"margin-auto"}}) }}
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="white-box">
            <h2><span>Biographie</span></h2>
                {{ form_widget(form.bio) }}
            </div>
        </div>
    </div>
        <div class="row">
        <div class="col-md-12">
            <div class="white-box text-center">
            {{ form_widget(form) }}
                <a class="red-button" href="{{ path("fos_user_profile_show") }}">Cancel</a>
                <input type="submit" value="{{ 'profile.edit.submit'|trans }}" />
            </div>
        </div>
    </div>
    
       
    </div>


</form>
</div>

{% endblock content %}

{% block jsbottom %}
{{ tinymce_init() }}
{% endblock jsbottom %}

