{% extends "CoreBundle::base-profile.html.twig" %}

{% block content %}

{% include "ProfileBundle:Include:top-profile.html.twig" %}

<div class="container">


    <div class="row">
    {% if user.characters|length > 0 %}

        {% for char in user.characters %}
        <div class=" col-md-6">
            <a href="{{ path("single-character",{"id": char.id}) }}" class="no-style">
                <div class="white-box no-padding character-list {% spaceless %}
                {% if char.game and char.game.slug %}
                    {{char.game.slug}}
                {% endif %}
            {% endspaceless %}">
                    <div class="character-thumbnail">
                        <img src="{{ char.WebPath | imagine_filter('character_thumbnail') }}">
                    </div>
                    <div class="description">
                        <h3><span>{{char.name}}</span> {% if char|isPrivate %}<em>(priv√©)</em>{% endif %}</h3>
                        
                        <ul class="list-unstyled">
                        {% if char.game and char.game.name %}
                            <li>{{char.game.name}}</li>
                        {% endif %}
                            <li>{{char.class}} lvl {{char.level}}</li>
                            <li>lvl {{char.level}}</li>
                        </ul>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
        {% endfor %}
        {% else %}
            {% if user !=  app.user %}
                <div class="col-md-12 no-data-full-size">
                    {{ user.username }} n'a pas encore de personnages.
                </div>
            {% endif %}
        {% endif %}

        {% if user ==  app.user %}

        <div class=" col-md-6">
            <a href="{{ path("add-character") }}" class="no-style">
                <div class="white-box-reversed no-padding character-list new-character">
                    <div class="character-thumbnail">
                        <img src="{{ asset("bundles/core/images/charisson0.jpg") }}">
                    </div>
                    <div class="description">
                        <h3 class="no-border"><span>Add a new character +</span></h3>
                        
                    </div>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
        {% endif %}
    </div>

</div>

{% endblock content %}