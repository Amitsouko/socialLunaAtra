<header id="main-top-bar" class="header-main">  
<div class="pull-left">
    <h1>Logo</h1>
</div>
<div class="pull-left">
    <input  type="search" placeholder="Recherche" name="search" id="search"/><input type="submit" value="Rechercher"/>
</div>
    {% trans_default_domain 'FOSUserBundle' %}

    {% if is_granted("ROLE_USER") %}
    <div class="pull-right profile-area">
        <div>
          <!--   <a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }} </a> -  -->
            <a href="{{ path("fos_user_profile_show") }}"><span>{{ app.user.username }}</span></a>
            <a href="{{ path("fos_user_profile_show") }}"><img src="{{ app.user.WebPath | imagine_filter("micro_profile_thumbnail") }}">
            </a>
        </div>
        <div>
            <a href="" id="trigger-main-menu-dropdown" class="glyphicon dropdown glyphicon-cog"></a>
            <ul id="main-menu-dropdown" class="list-unstyled dropdown-menu">
                <li><a href="{{ path("fos_user_profile_show") }}">Mon profil</a></li>
                <li><a href="{{ path("fos_user_profile_edit") }}">Ã‰diter mes informations</a></li>
                <li>ff</li>
                <li><a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }} </a></li>
            </ul>
        </div>
        
        
    </div>
    {% else %}
        <form action="{{ path("fos_user_security_check") }}" method="post" class="fos_user_registration_register"> 
            <input type="text" id="username" name="_username" required="required" placeholder="{{ 'security.login.username'|trans }}" />

             <input type="password" id="password" name="_password" required="required" placeholder="{{ 'security.login.password'|trans }}"/>

             <button type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}">
             <span class="glyphicon glyphicon-ok"></span>
             </button>
             <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        </form>

    {% endif %}

</header>